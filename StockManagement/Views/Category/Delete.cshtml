@model StockManagement.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Sil</h1>

<h3>Bu işlemi gerçekleştirmek istediğinden emin misin?</h3>

<div class="row">
    <form asp-action="Delete" method="post">
        <div class="col-sm-2">
            <strong>Kategori Adı:@Model.Name</strong>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
