@model IEnumerable<StockManagement.Models.Category>
@{
    ViewData["Title"] = "Kategori";
}

<h1>Kategoriler</h1>

<hr />
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Category">Düzenle</a>
                        <a class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Yeni Kategori Oluştur</a>
</div>